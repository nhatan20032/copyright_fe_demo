@model List<copyrights_fe.Model.vw_film_video>
@if (Model == null || Model.Count < 1)
{
    <h4>Bạn chưa tải lên bài hát nào</h4>
}
<link rel="stylesheet" href="~/css/login.css" />
<table class="table table-striped">
    <thead>
        <tr style="color:#fff">
            <th>STT</th>
            <th>Tên bài hát</th>
            <th>File</th>
        </tr>
    </thead>
    <tbody>
        @{
            int stt = 1;
        }
        @foreach (var song in Model)
        {
            var link = copyrights_fe.Services.Utilities.CommService.songInfoUrl(@song.title, @song.Id);
            <tr>
                <td>@stt</td>
                <td>@song.title</td>
                <td>
                    <video controls style="width:100%;height:25px">
                        <source src="@song.upload_file" />
                    </video>
                </td>
            </tr>
            stt++;
        }
    </tbody>
</table>